    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--training_data_path",
                "./data/train.csv",
                "--training_metadata_path",
                "./data/metadata.xlsx"
            ]
        },
        {
            "name": "Run Prediction",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/predict.py",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--test_data_path",
                "./data/test.csv",
                "--model_path",
                "./executions/11072022101004/model.pkl"
            ]
        }
    ]
}